<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id="@+id/cl.menu.base"
    android:background="#cecece"
    tools:context="com.miramicodigo.toddler.ui.MenuActivity">
    <FrameLayout
        android:id="@+id/flCarga"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#88666666"
        android:visibility="gone">
        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:id="@+id/pbCarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll.base"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_mg"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_launcher"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:paddingTop="10dp">
                    <TextView
                        android:id="@+id/tv.menu.mg.titulo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Motor Grueso"
                        android:textStyle="bold"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/tv.menu.mg.descripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Capacidad de movimiento basico del cuerpo como ser, movimiento de extremidades y equilibrio."
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/tv.menu.mg.preguntas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10 preguntas"
                        android:gravity="left"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:gravity="right|center_vertical">
                        <TextView
                            android:id="@+id/tv.menu.mg.resultado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sin evaluar"
                            android:layout_marginRight="5dp"
                            android:gravity="right"/>

                        <RatingBar
                            android:id="@+id/rb.menu.mg.rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:numStars="3"
                            android:rating="0"
                            style="?android:attr/ratingBarStyleSmall"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_mf"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_launcher"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:paddingTop="10dp">
                    <TextView
                        android:id="@+id/tv.menu.mf.titulo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Motor Fino"
                        android:textStyle="bold"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/tv.menu.mf.descripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Capacidad de movimiento basico del cuerpo como ser, movimiento de extremidades y equilibrio."
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/tv.menu.mf.preguntas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10 preguntas"
                        android:gravity="left"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:gravity="right|center_vertical">
                        <TextView
                            android:id="@+id/tv.menu.mf.resultado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sin evaluar"
                            android:layout_marginRight="5dp"
                            android:gravity="right"/>

                        <RatingBar
                            android:id="@+id/rb.menu.mf.rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:numStars="3"
                            android:rating="0"
                            style="?android:attr/ratingBarStyleSmall"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_leng"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_launcher"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:paddingTop="10dp">
                    <TextView
                        android:id="@+id/tv.menu.leng.titulo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lenguaje"
                        android:textStyle="bold"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/tv.menu.leng.descripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Capacidad de movimiento basico del cuerpo como ser, movimiento de extremidades y equilibrio."
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/tv.menu.leng.preguntas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10 preguntas"
                        android:gravity="left"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:gravity="right|center_vertical">
                        <TextView
                            android:id="@+id/tv.menu.leng.resultado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sin evaluar"
                            android:layout_marginRight="5dp"
                            android:gravity="right"/>

                        <RatingBar
                            android:id="@+id/rb.menu.leng.rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:numStars="3"
                            android:rating="0"
                            style="?android:attr/ratingBarStyleSmall"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btn.menu.evaluaciongeneral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Evaluacion General" />
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
